{
  "parser": "babel-eslint",
  "plugins": ["jest"],
  "extends": [
    "airbnb",
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier",
    "prettier/react"
  ],
  "globals": {
    "window": true,
    "documen": true
  },
  "env": {
    "jest/globals": true
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["src", "./src"],
          ["pages", "./src/pages"],
          ["templates", "./src/templates"],
          ["components", "./src/components"],
          ["context", "./src/context"],
          ["images", "./src/assets/images"],
          ["theme", "./src/theme"]
        ],
        "extensions": [".js", ".jsx"]
      }
    }
  },
  "rules": {
    "react/jsx-filename-extension": 0,
    "import/prefer-default-export": 0,
    "react/jsx-props-no-spreading": 0
  }
}
